{
    "name": "lferro9000/jenkins-pipelines-workshop",
    "description": "Jenkins Pipeline - PHP Workshop Bristol Mar 2018, based on Slim Skeleton: https://github.com/slimphp/Slim-Skeleton",
    "license": "MIT",
    "authors": [
        {
            "name": "Luis Ferro",
            "email": "lferro9000@gmail.com"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "theseer/phpdox": "dev-master",
        "sebastian/phpcpd": "^3.0@dev",
        "phpmd/phpmd": "dev-master",
        "phploc/phploc": "^4.0@dev",
        "squizlabs/php_codesniffer": "*"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public index.php",
        "test": "phpunit"
    }

}
